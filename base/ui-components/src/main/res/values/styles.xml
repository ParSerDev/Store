<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SpinnerTheme" parent="Widget.AppCompat.Light.DropDownItem.Spinner">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerTheme.Location">
        <item name="android:background">@drawable/spinner_background_location</item>
    </style>

    <style name="SpinnerTheme.Filter">
        <item name="android:background">@drawable/spinner_background_filter</item>
    </style>

    <style name="TouchRipple">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/ripple_primary</item>
    </style>

    <style name="Filter">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_filter</item>
    </style>

    <style name="LocationPointer">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_location_pointer</item>
    </style>

    <style name="Text">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
        <item name="android:textColor">?android:attr/colorSecondary</item>
    </style>

    <style name="Text.Cart">
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">19.01sp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Text.Cart.Subtitle">
        <item name="android:textFontWeight">400</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Text.Cart.Price">
        <item name="android:textFontWeight">700</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Text.Cart.Item">
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">25.35sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Text.Cart.Item.Price">
        <item name="android:textColor">?android:attr/colorPrimary</item>
    </style>


    <style name="Text.Cart.Title">
        <item name="android:textFontWeight">700</item>
        <item name="lineHeight">44.36sp</item>
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Text.Cart.Button">
        <item name="android:textFontWeight">700</item>
        <item name="lineHeight">25.35sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Text.Details">
        <item name="android:textFontWeight">500</item>
        <item name="lineHeight">20.28sp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>

    <style name="Text.Details.Button">
        <item name="android:textFontWeight">700</item>
        <item name="lineHeight">16.48sp</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Text.Details.Button.Selected">
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Text.Details.Button.Deselected">
        <item name="android:textColor">@color/white_500</item>
    </style>

    <style name="Text.Details.Button.Big">
        <item name="lineHeight">25.35sp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">?android:attr/textColor</item>
    </style>

    <style name="Text.Details.Icon">
        <item name="android:textFontWeight">400</item>
        <item name="lineHeight">13.94sp</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">?detailsIconColor</item>
