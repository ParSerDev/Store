<resources>
    <!-- Base application theme. -->
    <style name="Theme.Store" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange_400</item>
        <item name="colorPrimaryVariant">@color/orange_400</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_900</item>
        <item name="colorSecondaryVariant">@color/blue_900</item>
        <item name="colorOnSecondary">@android:color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white_050</item>
        <item name="android:colorBackground">@color/white_050</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:colorPrimary">@color/orange_400</item>
        <item name="android:colorSecondary">@color/blue_900</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@color/white_350</item>
        <item name="selectCategoryIconInactiveColor">@color/blue_100</item>
        <item name="selectCategoryIconActiveColor">@android:color/white</item>
        <item name="detailsIconColor">@color/white_400</item>
        <item name="cartItemButtonColor">@color/blue_800</item>
        <item name="dropDownIconColor">@color/blue_100</item>
        <item name="editTextHintColor">@color/orange_400</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/blue_900</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_splash</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Store</item>\
    </style>
</resources>