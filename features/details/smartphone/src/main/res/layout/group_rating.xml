<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_star1_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_star_half"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_star1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/image_star2_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star_half"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star1"
        app:layout_constraintStart_toEndOf="@id/image_star1"
        app:layout_constraintTop_toTopOf="@id/image_star1" />

    <ImageView
        android:id="@+id/image_star2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star1"
        app:layout_constraintStart_toEndOf="@id/image_star1"
        app:layout_constraintTop_toTopOf="@id/image_star1" />

    <ImageView
        android:id="@+id/image_star3_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star_half"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star2"
        app:layout_constraintStart_toEndOf="@id/image_star2"
        app:layout_constraintTop_toTopOf="@id/image_star2" />

    <ImageView
        android:id="@+id/image_star3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star2"
        app:layout_constraintStart_toEndOf="@id/image_star2"
        app:layout_constraintTop_toTopOf="@id/image_star2" />

    <ImageView
        android:id="@+id/image_star4_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star_half"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star3"
        app:layout_constraintStart_toEndOf="@id/image_star3"
        app:layout_constraintTop_toTopOf="@id/image_star3" />

    <ImageView
        android:id="@+id/image_star4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star3"
        app:layout_constraintStart_toEndOf="@id/image_star3"
        app:layout_constraintTop_toTopOf="@id/image_star3" />

    <ImageView
        android:id="@+id/image_star5_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star_half"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star4"
        app:layout_constraintStart_toEndOf="@id/image_star4"
        app:layout_constraintTop_toTopOf="@id/image_star4" />

    <ImageView
        android:id="@+id/image_star5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="9dp"
        android:background="@drawable/ic_star"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/image_star4"
        app:layout_constraintStart_toEndOf="@id/image_star4"
        app:layout_constraintTop_toTopOf="@id/image_star4" />

</androidx.constraintlayout.widget.ConstraintLayout>