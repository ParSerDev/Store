<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/image_item_picture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart = "15dp"
        android:layout_marginEnd="21dp"
        app:shapeAppearanceOverlay="@style/roundedImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_new"
        android:layout_width="27dp"
        android:layout_height="27dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/ripple_onprimary_shape_primary_rounded50dp"
        app:layout_constraintStart_toStartOf="@id/image_item_picture"
        app:layout_constraintTop_toTopOf="@id/image_item_picture">
        <TextView
            android:id="@+id/text_new"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/new_item"
            style="@style/Text.HotItem.New"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        style="@style/Text.HotItem.Title"
        app:layout_constraintStart_toStartOf="@id/layout_new"
        app:layout_constraintTop_toBottomOf="@id/layout_new"/>

    <TextView
        android:id="@+id/text_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        style="@style/Text.HotItem.Subtitle"
        app:layout_constraintStart_toStartOf="@id/text_title"
        app:layout_constraintTop_toBottomOf="@id/text_title"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_buy"
        android:layout_width="98dp"
        android:layout_height="23dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginBottom="26dp"
        android:background="@drawable/ripple_primary_shape_onprimary_rounded5dp"
        app:layout_constraintStart_toStartOf="@id/text_subtitle"
        app:layout_constraintBottom_toBottomOf="@id/image_item_picture">
        <TextView
            android:id="@+id/text_buy"
            android:text="@string/buy_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Text.HotItem.Buy"
            android:layout_marginBottom="2dp"
            android:duplicateParentState="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>