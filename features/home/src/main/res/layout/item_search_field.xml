<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_qr_code_background"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="@dimen/margin_end"
        android:background="@drawable/shape_rounded_corners_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_qr_code"
        app:layout_constraintBottom_toBottomOf="@id/image_qr_code_background"
        app:layout_constraintEnd_toEndOf="@id/image_qr_code_background"
        app:layout_constraintStart_toStartOf="@id/image_qr_code_background"
        app:layout_constraintTop_toTopOf="@id/image_qr_code_background" />

    <EditText
        android:id="@+id/edit_text_search"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_magnifying_glass"
        android:hint="@string/search"
        android:drawablePadding="18dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:inputType="text"
        android:autofillHints="name"
        android:textAppearance="@style/Text.Hint"
        android:textColorHint="@color/blue_900_alpha08"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        app:layout_constraintEnd_toStartOf="@id/image_qr_code_background"
        app:layout_constraintTop_toTopOf="@id/image_qr_code_background"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>