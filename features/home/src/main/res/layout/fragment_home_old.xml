<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        style="@style/SpinnerTheme"
        android:layout_marginTop="17.5dp"
        android:contentDescription="@string/description_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_location_pointer"
        style="@style/LocationPointer"
        android:layout_marginEnd="4dp"
        android:contentDescription="@string/description_location_pointer"
        app:layout_constraintBottom_toBottomOf="@id/spinner"
        app:layout_constraintEnd_toStartOf="@id/spinner"
        app:layout_constraintTop_toTopOf="@id/spinner" />

    <Button
        android:id="@+id/button_filter"
        style="@style/TouchRipple"
        android:contentDescription="@string/description_filter"
        app:layout_constraintBottom_toBottomOf="@id/image_filter"
        app:layout_constraintEnd_toEndOf="@id/image_filter"
        app:layout_constraintStart_toStartOf="@id/image_filter"
        app:layout_constraintTop_toTopOf="@id/image_filter"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/image_filter"
        style="@style/Filter"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="@dimen/margin_end"
        android:contentDescription="@string/description_filter"
        app:layout_constraintBottom_toBottomOf="@id/spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/spinner" />

    <TextView
        android:id="@+id/text_title_select_category"
        style="@style/Text.Title"
        android:layout_marginStart="17dp"
        android:layout_marginTop="20dp"
        android:text="@string/select_category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/spinner" />

    <TextView
        android:id="@+id/text_clickable_view_all"
        style="@style/Text.Clickable"
        android:layout_marginEnd="@dimen/margin_end"
        android:text="@string/view_all"
        app:layout_constraintBottom_toBottomOf="@id/text_title_select_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_title_select_category" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_select_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_select_category"
        tools:listitem="@layout/item_category" />

    <ImageView
        android:id="@+id/image_qr_code_background"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="@dimen/margin_end"
        android:background="@drawable/shape_rounded_corners_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/recycler_select_category" />

    <ImageView
        android:id="@+id/image_qr_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_qr_code"
        app:layout_constraintBottom_toBottomOf="@id/image_qr_code_background"
        app:layout_constraintEnd_toEndOf="@id/image_qr_code_background"
        app:layout_constraintStart_toStartOf="@id/image_qr_code_background"
        app:layout_constraintTop_toTopOf="@id/image_qr_code_background" />

    <EditText
        android:id="@+id/edit_text_search"
        android:layout_width="0dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/edit_text_background"
        android:drawableStart="@drawable/ic_magnifying_glass"
        android:hint="@string/search"
        android:drawablePadding="18dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:inputType="text"
        android:autofillHints="name"
        android:textAppearance="@style/Text.Hint"
        android:textColorHint="@color/blue_900_alpha08"
        android:textCursorDrawable="@drawable/edit_text_cursor"
        app:layout_constraintEnd_toStartOf="@id/image_qr_code_background"
        app:layout_constraintTop_toTopOf="@id/image_qr_code_background"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/text_title_hot_sales"
        style="@style/Text.Title"
        android:layout_marginStart="17dp"
        android:layout_marginTop="24dp"
        android:text="@string/hot_sales"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_search"/>

    <TextView
        android:id="@+id/text_clickable_see_more"
        style="@style/Text.Clickable"
        android:layout_marginEnd="@dimen/margin_end"
        android:text="@string/see_more"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/text_title_hot_sales"
        app:layout_constraintBottom_toBottomOf="@id/text_title_hot_sales"/>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_hot_sales"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_hot_sales"/>

</androidx.constraintlayout.widget.ConstraintLayout>