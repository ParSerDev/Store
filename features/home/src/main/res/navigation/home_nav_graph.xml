<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_graph"
    app:startDestination="@id/fragment_home">
    <fragment
        android:id="@+id/fragment_home"
        android:name="com.parserdev.store.home.presentation.home.HomeFragment"
        android:label="@string/fragment_home"
        tools:layout="@layout/fragment_home"
        app:popUpTo="@+id/fragment_library"
        app:popUpToInclusive="true">
        <action
            android:id="@+id/action_home_to_details"
            app:destination="@id/fragment_details" />
    </fragment>
    <fragment
        android:id="@+id/fragment_details"
        android:name="com.parserdev.store.home.presentation.details.DetailsFragment"
        android:label="@string/fragment_details"
        tools:layout="@layout/fragment_details" >
        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="category"
            app:argType="com.parserdev.store.domain.models.home.HomeCategory"
            />
    </fragment>
</navigation>